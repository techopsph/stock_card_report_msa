<odoo>

    <template
        id="assets_backend"
        name="stock_card_report_msa assets"
        inherit_id="web.assets_backend"
    >
        <xpath expr="." position="inside">
            <link
                href="/stock_card_report_msa/static/src/css/report.css"
                rel="stylesheet"
            />
            <script
                type="text/javascript"
                src="/stock_card_report_msa/static/src/js/stock_card_report_msa_backend.js"
            />
        </xpath>
    </template>

    <template id="stock_card_report_msa.internal_layout">
        <div class="article">
            <link
                href="/stock_card_report_msa/static/src/css/report.css"
                rel="stylesheet"
            />
            <t t-raw="0" />
        </div>
        <div class="footer">
            <div class="row">
                <div class="col-6 custom_footer">
                    <span
                        t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"
                    />
                </div>
                <div class="col-6 text-right custom_footer">
                    <span class="page" />/<span class="topage" />
                </div>
            </div>
        </div>
    </template>

    <template id="report_buttons">
        <div class="button_row">
            <button class="o_stock_card_report_msas_print btn btn-sm oe_button"><span
                    class="fa fa-print"
                />Print</button>
            <button class="o_stock_card_report_msas_export btn btn-sm oe_button"><span
                    class="fa fa-download"
                />Export</button>
        </div>
    </template>

    <template id="report_stock_card_report_msa_html">
        <div class="o_stock_card_report_msas_page">
            <t t-call="stock_card_report_msa.report_buttons" />
            <t t-call="stock_card_report_msa.report_stock_card_report_msa_base" />
        </div>
    </template>

    <template id="stock_card_report_msa.report_stock_card_report_msa_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="stock_card_report_msa.internal_layout">
                    <t t-call="stock_card_report_msa.report_stock_card_report_msa_base" />
                </t>
            </t>
        </t>
    </template>

    <template id="stock_card_report_msa.report_stock_card_report_msa_base">
        <t t-foreach="o.product_ids" t-as="product">
            <div class="page">
                <div class="row">
                    <t t-set="title">Stock Card - <t t-raw="product.name" /></t>
                    <h4 class="mt0" t-esc="title" style="text-align: center;" />
                </div>
                <!-- Display filters -->
                <t t-call="stock_card_report_msa.report_stock_card_report_msa_filters" />
                <!-- Display stock card table -->
                <div class="act_as_table data_table mt4" style="width: 100%;">
                    <!-- Display header line-->
                    <t t-call="stock_card_report_msa.report_stock_card_lines_header" />
                    <!-- Display initial lines -->
                    <t
                        t-set="initial"
                        t-value="o._get_initial(o.results.filtered(lambda l: l.product_id == product and l.is_initial))"
                    />
                    <t
                        t-set="initial_value"
                        t-value="o._get_initial_value(o.results.filtered(lambda l: l.product_id == product and l.is_initial))"
                    />
                    <t
                        t-set="initial_cost"
                        t-value="o._get_initial_cost(initial_value, initial)"
                    />
                    <div class="act_as_row lines">
                        <div class="act_as_cell" />
                        <div class="act_as_cell">
                            Initial
                        </div>
                        <div class="act_as_cell" />
                        <div class="act_as_cell" />
                        <div class="act_as_cell" />
                        <div class="act_as_cell" />
                        <div class="act_as_cell" />
                        <div class="act_as_cell" />
                        <div class="act_as_cell" />
                        <div class="act_as_cell" />
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(initial)" />
                        </div>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(initial_cost)" />
                        </div>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(initial_value)" />
                        </div>
                    </div>
                    <!-- Display each lines -->
                    <t t-set="product_balance_qty" t-value="initial" />
                    <t t-set="product_balance_cost" t-value="initial_cost" />
                    <t t-set="product_balance_value" t-value="initial_value" />
                    
                    <t
                        t-foreach="o.results.filtered(lambda l: l.product_id == product and not l.is_initial)"
                        t-as="product_line"
                    >
                        <t
                            t-set="product_balance_qty"
                            t-value="product_balance_qty + product_line.product_in - product_line.product_out"
                        />
                        <t
                            t-set="product_balance_value"
                            t-value="product_balance_value + product_line.product_in_value - product_line.product_out_value"
                        />
                        <t t-call="stock_card_report_msa.report_stock_card_lines" />
                    </t>
                </div>
                <p style="page-break-before:always;" />
            </div>
        </t>
    </template>

    <template id="stock_card_report_msa.report_stock_card_report_msa_filters">
        <div class="act_as_table data_table" style="width: 100%;">
            <div class="act_as_row labels">
                <div class="act_as_cell">Date From</div>
                <div class="act_as_cell">Date To</div>
                <div class="act_as_cell">Valuation</div>
            </div>
            <div class="act_as_row">
                <div class="act_as_cell">
                    <span t-field="o.date_from" />
                </div>
                <div class="act_as_cell">
                    <span t-field="o.date_to" />
                </div>
                <div class="act_as_cell">
                    <span>FIFO</span>
                </div>
            </div>
        </div>
    </template>

    <template id="stock_card_report_msa.report_stock_card_lines_header">
        <div class="act_as_thead">
            <div class="act_as_row labels">
                <div class="act_as_cell">Date</div>
                <div class="act_as_cell">Reference</div>
                <div class="act_as_cell">Cust Invoice / RR</div>
                <div class="act_as_cell">SO / SI No. / PO</div>
                <div class="act_as_cell">Input Qty</div>
                <div class="act_as_cell">Input Cost</div>
                <div class="act_as_cell">Input Value</div>
                <div class="act_as_cell">Output Qty</div>
                <div class="act_as_cell">Output Cost</div>
                <div class="act_as_cell">Output Value</div>
                <div class="act_as_cell">Balance Qty</div>
                <div class="act_as_cell">Balance Cost</div>
                <div class="act_as_cell">Balance Value</div>
            </div>
        </div>
    </template>

    <template id="stock_card_report_msa.report_stock_card_lines">
        <div class="act_as_row lines">
            <div class="act_as_cell left">
                <t t-esc="product_line.date.strftime('%Y-%m-%d')" />
            </div>
            <div class="act_as_cell left">
                    <t t-esc="product_line.reference" />
            </div>
            <t t-if="product_line.picking_code == 'incoming'">
                <div class="act_as_cell left">
                    <t t-esc="product_line.reference" />
                </div>
                <div class="act_as_cell left">
                    <t t-esc="product_line.origin" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_line.product_in)" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_line.product_in_cost)" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_line.product_in_value)" />
                </div>
                <div class="act_as_cell right">
                </div>
                <div class="act_as_cell right">
                </div>
                <div class="act_as_cell right">
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_balance_qty)" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_balance_value / product_balance_qty)" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_balance_value)" />
                </div>
            </t>

            <t t-if="product_line.picking_code == 'outgoing'">
                <div class="act_as_cell left">
                    <t t-esc="product_line.am_name" />
                </div>
                <div class="act_as_cell left">
                    <t t-esc="product_line.origin" /> / 
                    <t t-esc="product_line.am_si_number" />
                </div>
                <div class="act_as_cell right">
                </div>
                <div class="act_as_cell right">
                </div>
                <div class="act_as_cell right">
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_line.product_out)" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_line.product_out_cost)" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_line.product_out_value)" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_balance_qty)" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_balance_value / product_balance_qty)" />
                </div>
                <div class="act_as_cell right">
                    <t t-esc="'{0:,.3f}'.format(product_balance_value)" />
                </div>
            </t>
        </div>
   </template>

</odoo>
